<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androiddeveloper.settings.MainActivity">
    <android.support.v7.widget.CardView
        android:layout_width="90dp"
        android:layout_height="35dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="19dp"
        app:cardElevation="5dp">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:background="@drawable/custome_spinner_drop"
        android:gravity="center">

        <Spinner
            android:id="@+id/typesSpinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:background="@android:color/transparent"
            android:dropDownHorizontalOffset="-35dp"
            android:dropDownVerticalOffset="10dp"
            android:dropDownWidth="90dp"
            android:overlapAnchor="false"
            android:popupBackground="@drawable/custome_spinner_drop_log"
            android:spinnerMode="dropdown"
            tools:targetApi="lollipop" />

        <ImageView
            android:layout_width="0dp"
            android:layout_height="10dp"
            android:layout_marginRight="5dp"
            android:layout_weight="1"
             android:src="@mipmap/arrow96"
            android:visibility="visible"
            tools:ignore="RtlHardcoded,RtlSymmetry" />

    </LinearLayout>
    </android.support.v7.widget.CardView>
</android.support.constraint.ConstraintLayout>
